<!DOCTYPE html>
<html>
<head>
    <title>Edit Employee Details</title>
    <link rel="stylesheet" type="text/css" href="/public/styles/addEditEmployee-styles.css">
</head>
<body>
    <nav>
        <ul class="navbar">
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li><a id="addEmployee">Add Employee</a></li>
            <li><a id="logoutButton">Logout</a></li>
        </ul>
    </nav>

    <div class="edit-employee-form">
        <h1>Edit Employee Details</h1>
        
        <form action="/admin/employees/edit/<%= employee.id %>" method="POST">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="<%= employee.firstName %>" required>
            <br>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" value="<%= employee.lastName %>">
            <br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= employee.email %>" required>
            <br>
            <label for="isAdmin">Is Admin:</label>
            <input type="checkbox" id="isAdmin" name="isAdmin" <% if (employee.isAdmin) { %>checked<% } %>>
            <br>
            <button type="submit" value="Save">Save</button>
        </form>

        <!-- Display a success message if details are saved -->
        <% if (employee.saved) { %>
            <div class="alert alert-success">
                Employee details saved successfully.
            </div>
        <% } %>

        <!-- Button to navigate to the home page -->
        <a id="back-to-employee-list" href="/admin/dashboard">Back to Home</a>
    </div>

    <script src="/public/scripts/editEmployee-script.js"></script>

</body>
</html>
